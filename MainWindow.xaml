<Window x:Class="editor_piolin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Editor"
        Height="550" Width="900"
        Background="#1e1e1e"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="AccentColorbrush">#6D5DFB</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonHoverbrush" Color="#3c3c3c"/>
        <SolidColorBrush x:Key="ButtonBG" x:Name="ButtonBrush"  Color="#2B2B2B"/>
        
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ButtonBG}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource ButtonHoverbrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentColorbrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="TitleText">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#e6e6e6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,20">
            <Button Content="Open Image" Width="150" Height="35" Click="GetImage"
                    Background="{StaticResource AccentColorbrush}" BorderBrush="{StaticResource AccentColorbrush}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel Margin="15">
                <TextBlock Text="Original Image" Style="{StaticResource TitleText}"/>
                <Border Background="#2a2a2a" CornerRadius="8">
                    <Image x:Name="origphoto" Stretch="Uniform" Width="300" Height="300"/>
                </Border>
            </StackPanel>

            <StackPanel Margin="15">
                <TextBlock Text="Processed Image" Style="{StaticResource TitleText}"/>
                <Border Background="#2a2a2a" CornerRadius="8">
                    <Image x:Name="prophoto" Stretch="Uniform" Width="300" Height="300"/>
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10" VerticalAlignment="Center">
            <ComboBox x:Name="KernelCombo" Width="360" Margin="8,0" FontFamily="Bahnschrift Light" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="Aplicar kernel" Width="150" Click="ApplyKernel_Click"/>
        </StackPanel>
    </Grid>
</Window>

